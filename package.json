{
  "name": "@sjofartstidningen/bryggan",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:app": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:app\"",
    "dev:app": "cross-env NODE_ENV=development netlify dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint app --ext .js,.ts,.tsx",
    "format": "prettier app --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@reach/menu-button": "^0.17.0",
    "@remix-run/netlify": "^1.5.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "framer-motion": "^6.3.10",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-feather": "^2.0.10",
    "react-use-measure": "^2.1.1",
    "remix-auth": "^3.2.2",
    "remix-auth-oauth2": "^1.2.2",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=16"
  }
}
